                                <Label prefWidth="120" text="Phone Number :" />
                                <TextField fx:id="number" prefWidth="250" promptText="Phone Number" />
                            </HBox>

                            <!-- Password -->
                            <HBox alignment="CENTER_LEFT" spacing="20">
                                <Label prefWidth="120" text="Password :" />
                                <PasswordField fx:id="password" prefWidth="250" promptText="Password" />
                            </HBox>

                            <!-- Confirm Password -->
                            <HBox alignment="CENTER_LEFT" spacing="20">
                                <Label prefWidth="120" text="Confirm Password :" />
                                <PasswordField fx:id="confirm_pass" prefWidth="250" promptText="Confirm Password" />
                            </HBox>

                            <!-- Profile Picture -->
