                    </padding>
                    <children>

                        <!-- The Form Card: maxWidth set to Infinity to fill screen -->
                        <VBox maxWidth="1.7976931348623157E308" spacing="15.0" styleClass="form-card" stylesheets="@styles.css">
                            <padding>
                                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                            </padding>
                            <children>
                                <Label styleClass="form-title" text="Create New Request" />
                                <Label styleClass="form-subtitle" text="Please fill in the patient details below." />
                                <Separator prefWidth="200.0" />

                                <!-- Patient Name -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Patient Name" />
                                        <TextField fx:id="patientNameField" promptText="e.g. John Doe" styleClass="input-field" />
                                    </children>
                                </VBox>

                                <!-- Grid for Split Fields (Blood Group & Bags) -->
                                <GridPane hgap="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label styleClass="field-label" text="Blood Group" />
                                                <ComboBox fx:id="bloodGroupField" maxWidth="1.7976931348623157E308" promptText="Select" styleClass="combo-box-field">
                                                    <items>
                                                        <FXCollections fx:factory="observableArrayList">
                                                            <String fx:value="A+" />
                                                            <String fx:value="A-" />
                                                            <String fx:value="B+" />
                                                            <String fx:value="B-" />
                                                            <String fx:value="O+" />
                                                            <String fx:value="O-" />
                                                            <String fx:value="AB+" />
                                                            <String fx:value="AB-" />
                                                        </FXCollections>
                                                    </items>
                                                </ComboBox>
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" GridPane.columnIndex="1">
                                            <children>
                                                <Label styleClass="field-label" text="Units (Bags)" />
                                                <TextField fx:id="unitNeededField" promptText="e.g. 2" styleClass="input-field" />
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>

                                <!-- Hospital Name -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Hospital / Location" />
                                        <TextField fx:id="locationField" promptText="Hospital Name &amp; Area" styleClass="input-field" />
                                    </children>
                                </VBox>

                                <!-- Date Needed -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Date Needed" />
                                        <DatePicker fx:id="dateNeededField" maxWidth="1.7976931348623157E308" styleClass="date-picker-field" />
                                    </children>
                                </VBox>

                                <!-- Contact Number -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Contact Number" />
                                        <TextField fx:id="phoneField" promptText="+880 1xxx-xxxxxx" styleClass="input-field" />
                                    </children>
                                </VBox>

                                <!-- Additional Notes -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Additional Notes (Optional)" />
                                        <TextArea fx:id="notesArea" prefHeight="80.0" promptText="Any specific requirements..." styleClass="input-field" wrapText="true" />
                                    </children>
                                </VBox>

                                <!-- Buttons -->
