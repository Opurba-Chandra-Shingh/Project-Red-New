<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectredpulsenew.EditDocuments_Controller"
            prefWidth="1366" prefHeight="768"
            stylesheets="styles.css"
            style="-fx-background-color: #F3F4F6;">

    <!-- ================= CENTER FORM ================= -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="60"/>
            </padding>

            <!-- ================= CARD ================= -->
            <VBox spacing="18"
                  maxWidth="650"
                  styleClass="edit-card">

                <!-- Title -->
                <Label text="Update Documents">
                    <font>
                        <Font size="26"/>
                    </font>
                </Label>

                <!-- Medical Certificate PDF -->
                <Label text="Medical Certificate (PDF):" style="-fx-font-size: 14px;"/>
                <Button text="Choose PDF"
                        fx:id="btnMedicalPdf"
                        onAction="#chooseMedicalPdf"
                        styleClass="text-field"
                        prefWidth="200"/>

                <!-- NID Front -->
                <Label text="NID Front Image:" style="-fx-font-size: 14px;"/>
                <Button text="Choose NID Front"
                        fx:id="btnNidFront"
                        onAction="#chooseNidFront"
                        styleClass="text-field"
                        prefWidth="200"/>

                <!-- NID Back -->
                <Label text="NID Back Image:" style="-fx-font-size: 14px;"/>
                <Button text="Choose NID Back"
                        fx:id="btnNidBack"
                        onAction="#chooseNidBack"
                        styleClass="text-field"
                        prefWidth="200"/>

                <!-- Save & Cancel Buttons -->
                <HBox spacing="25" alignment="CENTER">
                    <Button text="Save Changes"
                            fx:id="btnSave"
                            onAction="#handleSaveDoc"
                            styleClass="edit-save-btn"
                            prefWidth="160"/>
                    <Button text="Cancel"
                            fx:id="btnCancel"
                            onAction="#handleCancelDoc"
                            styleClass="edit-cancel-btn"
                            prefWidth="120"/>
                </HBox>

            </VBox>
        </VBox>
    </center>

</BorderPane>
